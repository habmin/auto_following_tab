{
  "manifest_version": 3,
  "name": "Auto-Following Tab",
  "version": "1.0",

  "description": "Auto-clicks to the 'Following' tab on Twitter, instead of 'For You'",

  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-96.png",
    "128": "icons/border-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "https://twitter.com/home"],
      "js": ["auto_following_tab.js"]
    }
  ]
}
